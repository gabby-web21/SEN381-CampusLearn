@page "/"

<div class="landing-wrapper">
    <div class="landing-hero">
        <div class="hero-text">
            <h1 class="title">Welcome to <span>CampusLearn</span></h1>
            <p class="subtitle">Your personal learning companion — ask questions, get answers, and grow your knowledge with guided tutoring support.</p>
            <div class="landing-buttons">
                <button class="btn-landing primary" @onclick='() => Navigate("/signup")'>Get Started</button>
                <button class="btn-landing secondary" @onclick='() => Navigate("/login")'>Login</button>
            </div>
        </div>
        <div class="hero-illustration">
            <img src=" " alt="Learning Illustration" />
        </div>
    </div>
</div>

<style>
    /* Wrapper with subtle gradient background */
    .landing-wrapper {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #eef2ff, #fef3c7);
        padding: 2rem;
    }

    /* Hero layout */
    .landing-hero {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        align-items: center;
        max-width: 1200px;
        width: 100%;
    }

    /* Hero text side */
    .hero-text {
        color: #1e293b;
    }

    .title {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

        .title span {
            color: #2563eb;
            text-shadow: 0 0 6px rgba(37,99,235,0.2);
        }

    .subtitle {
        font-size: 1.25rem;
        margin-bottom: 2rem;
        color: #475569;
    }

    /* Buttons */
    .landing-buttons {
        display: flex;
        gap: 1rem;
    }

    .btn-landing {
        padding: 14px 32px;
        font-size: 1.1rem;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        font-weight: 600;
    }

        .btn-landing.primary {
            background: linear-gradient(45deg, #2563eb, #3b82f6);
            color: white;
        }

        .btn-landing.secondary {
            background: #facc15;
            color: #1e293b;
        }

        .btn-landing:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 8px 18px rgba(0,0,0,0.2);
        }

    /* Illustration */
    .hero-illustration img {
        width: 100%;
        max-width: 450px;
    }

</style>

@code {
    [Inject] NavigationManager NavManager { get; set; }

    private void Navigate(string url)
    {
        NavManager.NavigateTo(url);
    }
}
