@page "/"
@page "/landing"

<!-- Landing Page — CampusLearn -->

<main class="page">
    <div class="container grid">
        <!-- HERO band (full-width, centered content) -->
        <section class="panel hero full-bleed">
            <div class="band-inner center-block">
                <h1>Welcome to <span class="accent">CampusLearn</span></h1>
                <p class="lede">
                    Peer-powered learning with forums, tutors, and shared resources.
                </p>

                <div class="tiles">
                    <a class="tile" href="/signup">
                        <h3>Create Profile</h3>
                        <p>Set up your study subjects and preferences.</p>
                    </a>
                    <a class="tile" href="/login">
                        <h3>Login now</h3>
                        <p>Jump back into your campus space.</p>
                    </a>
                </div>
            </div>
        </section>

        @* REMOVED: Clara band
        <section class="panel full-bleed">
            <div class="band-inner center-block">
                <ClaraPanel Small="false" />
            </div>
        </section> *@
    </div>

    @* REMOVED: Bottom CTA "Get Started — it’s free"
    <div class="cta-wrap">
        <a class="cta" href="/signup">Get Started — it’s free</a>
    </div> *@
</main>

<footer class="foot">
    <div class="container"><small>© CampusLearn</small></div>
</footer>

<style>
    /* =========================
               DESIGN TOKENS
               ========================= */
    :root {
        --bg: #FFFFFF;
        --nav: #DBE4EE;
        --accent: #1B998B; /* primary teal */
        --accent-2: #F17300; /* orange */
        --ink: #2D3034;
        --panel-bg: #FFFFFF;
        --panel-ring: color-mix(in oklab, var(--ink) 10%, white);
        --muted: color-mix(in oklab, var(--ink) 55%, white);
        --radius: 1.25rem;
        --shadow-1: 0 6px 18px rgba(0,0,0,.06);
        --shadow-2: 0 12px 28px rgba(0,0,0,.08);
        --container: min(1200px, 92vw);
        transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    }

    /* Dark mode overrides */
    .dark-mode {
        --bg: #1a1a1a;
        --nav: #2d2d2d;
        --ink: #ffffff;
        --panel-bg: #2d2d2d;
        --panel-ring: #404040;
        --muted: #b3b3b3;
        --shadow-1: 0 6px 18px rgba(0,0,0,.3);
        --shadow-2: 0 12px 28px rgba(0,0,0,.4);
    }

        .dark-mode .tile {
            background: color-mix(in oklab, var(--accent) 20%, var(--panel-bg));
            border-color: var(--panel-ring);
            color: var(--ink);
        }

            .dark-mode .tile:hover {
                box-shadow: var(--shadow-2);
            }

            .dark-mode .tile p {
                color: var(--muted);
            }

        .dark-mode .hero.full-bleed {
            background: linear-gradient(180deg, color-mix(in oklab, var(--accent) 15%, var(--panel-bg)) 0%, var(--panel-bg) 30%);
        }

        .dark-mode .hero .accent {
            color: var(--ink);
            text-shadow: none;
        }

    /* NOTE: in Razor, use @@ to escape CSS at-rules */
    @@import url('https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700;800&family=Outfit:wght@500;600;700;800&display=swap');

    *, *::before, *::after {
        box-sizing: border-box
    }

    html, body {
        height: 100%
    }

    /* body {
        margin: 0;
        background: var(--bg);
        color: var(--ink);
        font-family: "Lexend", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
        line-height: 1.45;
        transition: background-color 0.3s ease, color 0.3s ease;
    } */
    body {
        margin: 0;
        background: url("/images/background.jpg") no-repeat center center fixed;
        background-size: cover;
        color: var(--ink);
        font-family: "Lexend", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
        line-height: 1.45;
        transition: background-color 0.3s ease, color 0.3s ease;
    }


    h1, h2, h3 {
        font-family: "Outfit", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
        margin: 0 0 .5rem;
    }

    img, svg {
        display: block
    }

    .nav {
        background: var(--nav);
        border-bottom: 1px solid var(--panel-ring);
        position: sticky;
        top: 0;
        z-index: 50;
    }

    .container {
        width: var(--container);
        margin-inline: auto;
        padding-inline: clamp(12px, 3vw, 24px);
    }

    /* PAGE LAYOUT */
    .page {
        display: grid;
        grid-template-rows: auto auto 1fr;
        min-height: calc(100dvh - 60px);
    }

    .grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: clamp(16px, 3vw, 28px);
        padding-block: clamp(18px, 4vw, 36px);
    }

    .panel {
        background: var(--panel-bg);
        border: 1px solid var(--panel-ring);
        border-radius: var(--radius);
        box-shadow: var(--shadow-1);
        padding: clamp(16px, 2.8vw, 28px);
        transition: background-color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    }

    /* ---------- FULL-BLEED BANDS ---------- */
    .full-bleed {
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        width: 100vw;
        border-radius: 0;
        padding-block: clamp(18px, 4vw, 40px);
        border: 0;
        box-shadow: none;
    }

    .hero.full-bleed {
        /* full-bleed band already set by .full-bleed */
        position: relative;
        /* put the image on the hero itself */
        background: url("/images/background.jpg") no-repeat center center;
        background-size: cover;
        /* optional: keep it fixed for a nice parallax feel (remove if you prefer scroll) */
        background-attachment: fixed;
        /* give the hero some height so the image shows off */
        min-height: clamp(360px, 60vh, 720px);
        display: grid;
        place-items: center; /* vertically center inner content */
    }

    .band-inner {
        width: var(--container);
        margin-inline: auto;
        padding-inline: clamp(12px, 3vw, 24px);
    }

    .center-block {
        text-align: center;
    }

    .hero h1 {
        font-size: clamp(28px, 6.5vw, 64px);
        font-weight: 800;
    }

    .hero .accent {
        color: var(--ink);
        text-shadow: 0 1px 0 #fff
    }

    .lede {
        color: var(--muted);
        font-size: clamp(14px, 1.6vw, 18px);
        margin: 6px 0 18px;
    }

    /* Tiles */
    .tiles {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: clamp(12px, 2.2vw, 18px);
        max-width: 920px;
        margin-inline: auto;
        justify-items: center;
    }

    .tile {
        display: block;
        text-decoration: none;
        color: var(--ink);
        text-align: center;
        background: color-mix(in oklab, var(--accent) 10%, white);
        border: 1px solid var(--panel-ring);
        border-radius: calc(var(--radius) - 4px);
        padding: 16px 18px;
        box-shadow: var(--shadow-1);
        transition: transform .15s ease, box-shadow .15s ease, background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

        .tile:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-2)
        }

        .tile h3 {
            font-weight: 700;
            margin-bottom: 6px
        }

        .tile p {
            margin: 0;
            color: var(--muted);
            font-size: .95rem
        }

    /* FOOTER */
    .foot {
        border-top: 1px solid var(--panel-ring);
        background: var(--bg);
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        .foot .container {
            padding-block: 14px;
            color: var(--muted)
        }

    /* Mobile nicety: rounded bands on very small screens */
    @@media (max-width: 520px) {
        .full-bleed {
            border-radius: var(--radius);
            margin-left: auto;
            margin-right: auto;
            left: 0;
            right: 0;
            width: auto;
        }
    }

    /* (Optional, unused now) CTA animation — escaped at-rule so Razor doesn't choke */
    @@keyframes cta-pulse {
        0% {
            box-shadow: 0 0 0 rgba(90,209,255,.6);
        }

        70% {
            box-shadow: 0 0 14px rgba(90,209,255,.4);
        }

        100% {
            box-shadow: 0 0 0 rgba(90,209,255,0);
        }
    }
</style>
