@page "/"
@page "/landing"
@layout NavigationForLanding

<!-- Landing Page — CampusLearn -->

<main class="page">
    <!-- Page-wide background image (fixed, covers viewport) -->
    <img class="page-bg" src="images/background.jpg" alt="" aria-hidden="true" />

    <div class="container grid">
        <!-- HERO band (full-width, centered content) -->
        <section class="panel hero full-bleed">
            <div class="band-inner center-block">
                <h1>Welcome to <span class="accent">CampusLearn</span></h1>
                <p class="lede">
                    Peer-powered learning with forums, tutors, resources, and CLARA by your side.
                </p>

                <div class="tiles">
                    <a class="tile" href="/signup">
                        <h3>Create Profile</h3>
                        <p>Set up your study subjects and preferences.</p>
                    </a>
                    <a class="tile" href="/login">
                        <h3>Login now</h3>
                        <p>Jump back into your campus space.</p>
                    </a>
                </div>
            </div>
        </section>
    </div>
</main>

<footer class="foot">
    <div class="container"><small>© CampusLearn</small></div>
</footer>

<style>
    :root {
        --bg: #FFFFFF;
        --nav: #DBE4EE;
        --accent: #1B998B;
        --ink: #2D3034;
        --panel-bg: #FFFFFF;
        --panel-ring: color-mix(in oklab,var(--ink) 10%,white);
        --muted: color-mix(in oklab,var(--ink) 55%,white);
        --radius: 1.25rem;
        --shadow-1: 0 6px 18px rgba(0,0,0,.06);
        --shadow-2: 0 12px 28px rgba(0,0,0,.08);
        --container: min(1200px,92vw)
    }

    .container {
        width: var(--container);
        margin-inline: auto;
        padding-inline: clamp(12px,3vw,24px)
    }

    .page {
        display: grid;
        grid-template-rows: auto auto 1fr;
        min-height: calc(100dvh - 60px);
        position: relative
    }

    .page-bg {
        position: fixed;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        pointer-events: none;
        filter: brightness(.9)
    }

    .grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: clamp(16px,3vw,28px);
        padding-block: clamp(18px,4vw,36px)
    }

    .panel {
        background: var(--panel-bg);
        border: 1px solid var(--panel-ring);
        border-radius: var(--radius);
        box-shadow: var(--shadow-1);
        padding: clamp(16px,2.8vw,28px)
    }

    .full-bleed {
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        width: 100vw;
        border: 0;
        border-radius: 0;
        box-shadow: none;
        padding-block: clamp(18px,4vw,40px)
    }

    .hero.full-bleed {
        background: none
    }

    .band-inner {
        width: var(--container);
        margin-inline: auto;
        padding-inline: clamp(12px,3vw,24px)
    }

    .center-block {
        text-align: center
    }

    .hero h1 {
        font-size: clamp(28px,6.5vw,64px);
        font-weight: 800;
        color: #fff;
        text-shadow: 0 2px 12px rgba(0,0,0,.35);
        margin: 0
    }

    .hero .accent {
        color: #fff;
        text-shadow: 0 2px 12px rgba(0,0,0,.35)
    }

    .lede {
        color: #fff;
        font-size: clamp(14px,1.6vw,18px);
        margin: 6px 0 18px;
        text-shadow: 0 2px 10px rgba(0,0,0,.35)
    }

    .tiles {
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(220px,1fr));
        gap: clamp(12px,2.2vw,18px);
        max-width: 920px;
        margin-inline: auto;
        justify-items: center
    }

    .tile {
        display: block;
        text-decoration: none;
        color: var(--ink);
        text-align: center;
        background: color-mix(in oklab,var(--accent) 10%,white);
        border: 1px solid var(--panel-ring);
        border-radius: calc(var(--radius) - 4px);
        padding: 16px 18px;
        box-shadow: var(--shadow-1);
        transition: transform .15s ease, box-shadow .15s ease
    }

        .tile:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-2)
        }

        .tile h3 {
            font-weight: 700;
            margin-bottom: 6px
        }

        .tile p {
            margin: 0;
            color: var(--muted);
            font-size: .95rem
        }

    .foot {
        border-top: 1px solid var(--panel-ring);
        background: var(--bg)
    }

        .foot .container {
            padding-block: 14px;
            color: var(--muted)
        }
</style>
