@page "/become-tutor"

<PageTitle>Become a Tutor | CampusLearn</PageTitle>

<h2>Sign Up to Become a Tutor</h2>

<p>Please fill in your details below to apply as a tutor.</p>

<form>
    <div class="form-group">
        <label for="studentName">Full Name</label>
        <input id="studentName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="studentEmail">Email</label>
        <input id="studentEmail" type="email" class="form-control" />
    </div>

    <div class="form-group">
        <label for="subject">Subject(s) you want to tutor</label>
        <input id="subject" class="form-control" />
    </div>

    <div class="form-group">
        <label for="availability">Availability</label>
        <input id="availability" type="text" class="form-control" placeholder="e.g., Weekdays 3-5pm" />
    </div>

    <button type="submit" class="btn btn-primary">Submit Application</button>
</form>

