@page "/become-tutor"

<PageTitle>Become a Tutor | CampusLearn</PageTitle>

<main class="bt-scope bt-page">
    <div class="bt-wrap">
        <header class="bt-head">
            <h1 class="bt-title">
                Become a <span class="tutor-word">Tutor</span>
            </h1>
            <p class="bt-sub">
                Please fill in your details to apply as a tutor. We’ll review your application shortly.
            </p>
        </header>

        <section class="bt-panel">
            <!-- prevent page navigation on submit -->
            <form class="bt-form" @onsubmit:preventDefault @onsubmit="HandleSubmit">
                <div class="bt-grid">
                    <div class="bt-field">
                        <label for="studentName">Full Name</label>
                        <input id="studentName" class="bt-input" placeholder="e.g., Alex Johnson" />
                    </div>

                    <div class="bt-field">
                        <label for="studentEmail">Email</label>
                        <input id="studentEmail" type="email" class="bt-input" placeholder="you@campus.edu" />
                    </div>

                    <div class="bt-field">
                        <label for="subject">Subject(s) you want to tutor</label>
                        <input id="subject" class="bt-input" placeholder="e.g., BUM281, MTH102" />
                    </div>

                    <div class="bt-field">
                        <label for="availability">Availability</label>
                        <input id="availability" class="bt-input" placeholder="e.g., Weekdays 3–5pm" />
                    </div>
                </div>

                <div class="bt-field bt-file-field">
                    <label for="transcript" class="bt-file-label">Transcript (PDF or image)</label>

                    <div class="bt-drop">
                        <div class="bt-drop-icon" aria-hidden="true">
                            <svg viewBox="0 0 24 24" width="22" height="22">
                                <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66L9.64 16.2a2 2 0 0 1-2.83-2.83l8.49-8.49"
                                      fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <div class="bt-drop-copy">
                            <strong>Attach your transcript</strong><br />
                            <span>PDF, PNG or JPG — max ~10 MB</span>
                        </div>
                        <label class="bt-file-btn">
                            <input id="transcript" type="file" accept=".pdf,.png,.jpg,.jpeg" />
                            Choose file
                        </label>
                    </div>
                </div>

                <div class="bt-actions">
                    <button class="bt-btn primary" type="submit">Submit Application</button>
                    <button class="bt-btn ghost" type="button" onclick="this.closest('form').reset()">Clear</button>
                </div>
            </form>
        </section>
    </div>
</main>

@code {
    private void HandleSubmit()
    {
        // TODO: send to API, show toast, etc.
        // This handler exists so the event binding compiles cleanly.
    }
}

