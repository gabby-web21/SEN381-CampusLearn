@page "/reset-password"
@using System.Net.Http.Json
@layout WithoutChatbotNav
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>Reset Password | CampusLearn</PageTitle>

<main class="login-wrap">
    <img class="page-bg" src="images/background.jpg" alt="" aria-hidden="true" />
    <section class="login-card">
        <div class="logo">
            <img src="images/logoLight.jpg" alt="CampusLearn Logo" />
        </div>

        <h1 class="heading">RESET PASSWORD</h1>
        <p class="subtitle">Enter your new password below.</p>

        <form class="form">
            <label for="password" class="label">New Password</label>
            <input id="password" type="password" class="input" @bind="Password" />
            @if (showPasswordError)
            {
                <p class="text-danger">Password must be at least 6 characters long.</p>
            }

            <label for="confirmPassword" class="label">Confirm New Password</label>
            <input id="confirmPassword" type="password" class="input" @bind="ConfirmPassword" />
            @if (showConfirmPasswordError)
            {
                <p class="text-danger">Passwords do not match.</p>
            }

            <div class="btn-center">
                <button type="button" class="btn" @onclick="HandleResetPassword" disabled="@isLoading">
                    @(isLoading ? "Resetting..." : "Reset Password")
                </button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Message))
        {
            <div class="@($"alert-message {(isSuccess ? "success" : "error")}")">@Message</div>
        }

        <div class="back-to-login">
            <a href="/login">← Back to Login</a>
        </div>
    </section>
</main>

<style>
    :root {
        --bg: #FFFFFF;
        --ink: #2D3034;
        --nav: #DBE4EE;
        --panel: #DBE4EE;
        --white: #FFFFFF;
        --orange: #F17300;
        --radius: 18px;
        --pill: 999px;
        --shadow: 0 8px 22px rgba(0,0,0,.08);
        --ring: color-mix(in oklab, var(--ink) 12%, white);
    }

    @@import url('https://fonts.googleapis.com/css2?family=Lexend:wght@400;600;800&family=Outfit:wght@700;800&display=swap');

    *, *::before, *::after {
        box-sizing: border-box
    }

    html, body {
        height: 100%
    }

    body {
        margin: 0;
        background: var(--bg);
        color: var(--ink);
        font-family: "Lexend",system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif;
        line-height: 1.45;
    }

    h1 {
        font-family: "Outfit",system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif;
        margin: 0;
    }

    .login-wrap {
        min-height: 100dvh;
        display: grid;
        place-items: center;
        padding: 24px;
    }

    .login-card {
        width: clamp(280px,34vw,380px);
        background: var(--panel);
        border: 1px solid var(--ring);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 26px 26px 22px;
        text-align: center;
    }

    .logo {
        margin-inline: auto;
    }

    .heading {
        margin-top: 6px;
        margin-bottom: 18px;
        font-weight: 800;
        letter-spacing: .4px;
        font-size: clamp(22px,3.2vw,28px);
    }

    .subtitle {
        margin-bottom: 20px;
        color: var(--ink);
        opacity: 0.8;
        font-size: 0.9rem;
        line-height: 1.4;
    }

    .form {
        text-align: left;
        display: grid;
        gap: 8px;
        margin-bottom: 6px;
    }

    .label {
        font-weight: 600;
        font-size: .95rem;
        margin-top: 6px;
    }

    .input {
        height: 34px;
        border: 0;
        border-radius: var(--pill);
        background: var(--white);
        padding: 0 12px;
        outline: none;
        box-shadow: inset 0 0 0 1px rgba(0,0,0,.08);
        font: inherit;
        color: var(--ink);
    }

        .input:focus {
            box-shadow: inset 0 0 0 2px color-mix(in oklab, var(--ink) 12%, white), 0 0 0 2px color-mix(in oklab, var(--ink) 6%, white);
        }

    .btn-center {
        display: flex;
        justify-content: center;
        margin-top: 12px;
    }

    .btn {
        width: 180px;
        height: 42px;
        border: 0;
        border-radius: 14px;
        background: var(--orange);
        color: #fff;
        font-weight: 800;
        font-size: 1rem;
        letter-spacing: .15px;
        cursor: pointer;
        box-shadow: var(--shadow);
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
    }

        .btn:active {
            transform: translateY(1px);
        }

    .back-to-login {
        margin-top: 16px;
    }

    .back-to-login a {
        color: var(--ink);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
    }

        .back-to-login a:hover {
            text-decoration: underline;
        }

    .alert-message {
        margin-top: 14px;
        padding: 10px;
        border-radius: 10px;
        text-align: center;
        font-weight: 600;
        color: white;
        background-color: var(--orange);
        animation: fadeIn .3s ease;
    }

        .alert-message.success {
            background-color: #28a745;
        }

        .alert-message.error {
            background-color: #F17300;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(5px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width:520px) {
        .login-card {
            width: 88vw;
            padding: 22px 18px 18px;
        }

        .btn {
            width: 70%;
        }
    }

    /* ===== PAGE BACKGROUND IMAGE ===== */
    .login-wrap {
        position: relative;
        min-height: 100dvh;
        display: grid;
        place-items: center;
        padding: 24px;
        overflow: hidden;
    }

    .page-bg {
        position: fixed;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        pointer-events: none;
    }

    body:not(.dark-mode) .page-bg {
        filter: brightness(0.92);
    }

    .dark-mode .page-bg {
        filter: brightness(0.6);
    }

    .login-card {
        position: relative;
        z-index: 2;
        background: var(--panel);
    }

    /* ===== LOGO IMAGE STYLING ===== */
    .logo img {
        display: block;
        margin-inline: auto;
        width: clamp(120px, 22vw, 160px);
        height: auto;
        margin-bottom: 12px;
    }

    .logo {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
    }
</style>

@code {
    private string Password = string.Empty;
    private string ConfirmPassword = string.Empty;
    private string Message = string.Empty;
    private bool showPasswordError = false;
    private bool showConfirmPasswordError = false;
    private bool isLoading = false;
    private bool isSuccess = false;

    [SupplyParameterFromQuery]
    public string? Token { get; set; }

    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(Token))
        {
            Message = "⚠️ Invalid or missing reset token.";
            isSuccess = false;
        }
    }

    private async Task HandleResetPassword()
    {
        showPasswordError = string.IsNullOrWhiteSpace(Password) || Password.Length < 6;
        showConfirmPasswordError = Password != ConfirmPassword;

        if (showPasswordError || showConfirmPasswordError)
        {
            Message = "⚠️ Please correct the highlighted fields.";
            isSuccess = false;
            return;
        }

        if (string.IsNullOrEmpty(Token))
        {
            Message = "⚠️ Invalid reset token.";
            isSuccess = false;
            return;
        }

        isLoading = true;
        Message = string.Empty;
        isSuccess = false;

        try
        {
            var request = new { Token, NewPassword = Password };
            var resp = await Http.PostAsJsonAsync("https://localhost:7228/api/PasswordReset/reset-password", request);

            if (!resp.IsSuccessStatusCode)
            {
                try
                {
                    var errorData = await resp.Content.ReadFromJsonAsync<Dictionary<string, string>>();
                    if (errorData != null && errorData.ContainsKey("error"))
                        Message = $"⚠ {errorData["error"]}";
                    else
                        Message = "⚠ Failed to reset password. Please try again.";
                }
                catch
                {
                    Message = "⚠ Failed to reset password. Please try again.";
                }

                isSuccess = false;
                return;
            }

            Message = "✅ Password reset successfully! You can now log in with your new password.";
            isSuccess = true;

            // Redirect to login after a short delay
            await Task.Delay(2000);
            NavigationManager.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            Message = $"⚠ Unexpected error: {ex.Message}";
            isSuccess = false;
        }
        finally
        {
            isLoading = false;
        }
    }
}
