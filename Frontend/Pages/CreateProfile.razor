@code {
    private string AvatarUrl = "https://placehold.co/160x160/png";
    private bool isUploading = false;
    private string? uploadError;
    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        try
        {
            uploadError = null;
            isUploading = true;
            var file = e.File;
            if (file is null) return;

            // Validate type
            var mime = file.ContentType ?? "";
            if (!mime.StartsWith("image/", StringComparison.OrdinalIgnoreCase))
            {
                uploadError = "Please select an image file.";
                return;
            }

            // Max original size 5 MB
            const long maxBytes = 5 * 1024 * 1024;

            // Client-side resize to max 512x512 and get JPEG stream
            var resized = await file.RequestImageFileAsync("image/jpeg", 512, 512);
            using var stream = resized.OpenReadStream(maxBytes);

            // Preview immediately as data URL
            using var msPreview = new MemoryStream();
            await stream.CopyToAsync(msPreview);
            var base64 = Convert.ToBase64String(msPreview.ToArray());
            AvatarUrl = $"data:image/jpeg;base64,{base64}";

            // Upload to backend
            using var content = new MultipartFormDataContent();
            var fileContent = new ByteArrayContent(msPreview.ToArray());
            fileContent.Headers.ContentType = new System.Net.Http.Headers.MediaTypeHeaderValue("image/jpeg");
            content.Add(fileContent, "File", Path.ChangeExtension(file.Name, ".jpg"));

            var resp = await Http.PostAsync("https://localhost:7228/api/File/uploadfile", content);
            if (resp.IsSuccessStatusCode)
            {
                var json = await resp.Content.ReadFromJsonAsync<Dictionary<string, string>>();
                if (json != null && json.TryGetValue("SignedUrl", out var url) && !string.IsNullOrWhiteSpace(url))
                {
                    AvatarUrl = url; // use signed URL from storage
                    uploadError = null;
                }
            }
            else
            {
                var details = await resp.Content.ReadAsStringAsync();
                uploadError = $"Upload failed: {resp.StatusCode}{(string.IsNullOrWhiteSpace(details) ? string.Empty : $" — {details}")}";
            }
        }
        catch (Exception ex)
        {
            uploadError = ex.Message;
        }
        finally { isUploading = false; }
    }

    private ProfileForm Form = new();
    private string NewSubject = string.Empty;
    private string NewInterest = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var uid = await JS.InvokeAsync<string>("localStorage.getItem", "userId");
            if (string.IsNullOrEmpty(uid) || !int.TryParse(uid, out int userId))
            {
                Console.WriteLine("⚠️ Missing or invalid userId — cannot load profile.");
                return;
            }

            // ✅ Fetch full user record by ID
            var response = await Http.GetAsync($"https://localhost:7228/api/Profile/by-id/{userId}");
            if (response.IsSuccessStatusCode)
            {
                var user = await response.Content.ReadFromJsonAsync<User>();
                if (user != null)
                {
                    Form.FirstName = user.FirstName ?? "";
                    Form.LastName = user.LastName ?? "";
                    Form.Email = user.Email ?? "";
                    Form.Phone = user.PhoneNum ?? "";
                    Form.Program = user.Program ?? "";
                    Form.Year = user.Year ?? "";
                    Form.City = user.City ?? "";
                    Form.Country = user.Country ?? "";
                    Form.Timezone = user.Timezone ?? "";
                    Form.Website = user.Website ?? "";
                    Form.About = user.About ?? "";
                    Form.ContactPreference = user.ContactPreference ?? "";
                    Form.Subjects = (user.Subjects ?? "").Split(",", StringSplitOptions.RemoveEmptyEntries).Select(s => s.Trim()).ToList();
                    Form.Interests = (user.Interests ?? "").Split(",", StringSplitOptions.RemoveEmptyEntries).Select(s => s.Trim()).ToList();

                    Console.WriteLine($"✅ Profile data loaded for userId {userId}");
                }
                else
                {
                    Console.WriteLine("⚠️ User record returned null.");
                }
            }
            else
            {
                Console.WriteLine($"⚠️ Failed to load user data. Status: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error loading profile: {ex.Message}");
        }
    }

    private async Task Save()
    {
        try
        {
            var uid = await JS.InvokeAsync<string>("localStorage.getItem", "userId");
            if (!int.TryParse(uid, out int userId))
            {
                Console.WriteLine("⚠️ Invalid userId — cannot save.");
                return;
            }

            // ✅ Build a plain DTO that matches ProfileUpdateDto in backend
            var updateDto = new
            {
                FirstName = Form.FirstName,
                LastName = Form.LastName,
                Email = Form.Email,
                PhoneNum = Form.Phone,
                City = Form.City,
                Country = Form.Country,
                Timezone = Form.Timezone,
                Website = Form.Website,
                Program = Form.Program,
                Year = Form.Year,
                StudentId = Form.StudentId,
                About = Form.About,
                ContactPreference = Form.ContactPreference,
                Interests = string.Join(", ", Form.Interests),
                Subjects = string.Join(", ", Form.Subjects),
                ProfilePicturePath = AvatarUrl
            };

            // ✅ Send the clean DTO instead of the User model
            var response = await Http.PutAsJsonAsync(
                $"https://localhost:7228/api/Profile/{userId}", updateDto);

            if (response.IsSuccessStatusCode)
            {
                Console.WriteLine("✅ Profile saved successfully.");
                Nav.NavigateTo("/dashboard");
            }
            else
            {
                var errorText = await response.Content.ReadAsStringAsync();
                Console.WriteLine($"⚠️ Save failed. Status: {response.StatusCode}, Response: {errorText}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error saving profile: {ex.Message}");
        }
    }


    private void AddSubject()
    {
        var s = (NewSubject ?? string.Empty).Trim().ToUpperInvariant();
        if (!string.IsNullOrWhiteSpace(s) && !Form.Subjects.Contains(s))
        {
            Form.Subjects.Add(s);
            NewSubject = "";
        }
    }

    private void RemoveSubject(string s) => Form.Subjects.Remove(s);

    private void AddInterest()
    {
        var t = (NewInterest ?? string.Empty).Trim();
        if (!string.IsNullOrWhiteSpace(t) && !Form.Interests.Contains(t, StringComparer.OrdinalIgnoreCase))
        {
            Form.Interests.Add(t);
            NewInterest = "";
        }
    }

    private void RemoveInterest(string t)
    {
        var hit = Form.Interests.FirstOrDefault(x => string.Equals(x, t, StringComparison.OrdinalIgnoreCase));
        if (hit is not null) Form.Interests.Remove(hit);
    }

    public class ProfileForm
    {
        public string FirstName { get; set; } = "";
        public string LastName { get; set; } = "";
        public string Email { get; set; } = "";
        public string Phone { get; set; } = "";
        public string Program { get; set; } = "";
        public string Year { get; set; } = "";
        public string StudentId { get; set; } = "";
        public string City { get; set; } = "";
        public string Country { get; set; } = "";
        public string Timezone { get; set; } = "";
        public string Website { get; set; } = "";
        public string About { get; set; } = "";
        public string ContactPreference { get; set; } = "";
        public List<string> Subjects { get; set; } = new();
        public List<string> Interests { get; set; } = new();
    }
}
