<style>
    /* ===== Tokens ===== */
    :root {
        --bg: #f5f7fb;
        --panel: #fff;
        --ink: #2D3034;
        --muted: color-mix(in oklab, var(--ink) 55%, white);
        --ring: color-mix(in oklab, var(--ink) 12%, white);
        --primary: #1B998B;
        --accent: #3a7bdb;
        --chip: #DBE4EE;
        --radius: 14px;
        --shadow: 0 6px 18px rgba(0,0,0,.06);
        --container: min(1150px,92vw);
        
        /* Add smooth transitions for all elements */
        transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    }

    /* Dark mode overrides */
    .dark-mode {
        --bg: #1a1a1a;
        --panel: #2d2d2d;
        --ink: #ffffff;
        --muted: #b3b3b3;
        --ring: #404040;
        --primary: #1B998B;
        --accent: #3a7bdb;
        --chip: #404040;
        --shadow: 0 6px 18px rgba(0,0,0,.3);
    }

    /* Dark mode for stat boxes (Followers/Following) */
    .dark-mode .stat-box {
        background: var(--panel);
        border-color: var(--ring);
    }

    /* Dark mode for avatar background */
    .dark-mode .avatar-xl {
        background: var(--ring);
    }

    /* Dark mode for buttons */
    .dark-mode .btn {
        background: var(--mist);
        color: var(--ink);
        border-color: var(--ring);
    }

    .dark-mode .btn.following {
        background: #6B7280;
        color: #fff;
    }

    /* Dark mode for tabs */
    .dark-mode .tab {
        background: var(--mist);
        color: var(--ink);
        border-color: var(--ring);
    }

    .dark-mode .tab.active {
        background: color-mix(in oklab, var(--accent) 20%, var(--panel));
        color: var(--ink);
        border-color: var(--accent);
    }

    /* Dark mode for metric boxes */
    .dark-mode .metric {
        background: var(--panel);
        border-color: var(--ring);
    }

    /* Dark mode for table headers */
    .dark-mode .table thead th {
        background: var(--mist);
        color: var(--ink);
    }

    /* Dark mode for muted text - make it more visible */
    .dark-mode .subtitle {
        color: var(--ink);
    }

    .dark-mode .stat-box .stat-lbl {
        color: var(--ink);
    }

    .dark-mode .metric .lbl {
        color: var(--ink);
    }

    /* Dark mode for hardcoded dark text colors */
    .dark-mode .btn {
        color: var(--ink);
    }

    .dark-mode .tab {
        color: var(--ink);
    }

    .dark-mode .tab.active {
        color: var(--ink);
    }

    .dark-mode .panel {
        color: var(--ink);
    }

    .dark-mode .panel .label {
        color: var(--ink);
    }

    .dark-mode .panel .value {
        color: var(--ink);
    }

    /* Dark mode for card content */
    .dark-mode .card {
        background: var(--panel);
        border-color: var(--ring);
        color: var(--ink);
    }

    .dark-mode .card-hd {
        color: var(--ink);
    }

    .dark-mode .props dt {
        color: var(--ink);
    }

    .dark-mode .props dd {
        color: var(--ink);
    }

    .dark-mode .muted {
        color: var(--ink);
    }

    .dark-mode .tags {
        color: var(--ink);
    }

    .dark-mode .links a {
        color: var(--accent);
    }

    .dark-mode .links a:hover {
        color: var(--primary);
    }

    /* Dark mode for contact items */
    .dark-mode .contact-item dt {
        color: var(--ink);
    }

    .dark-mode .contact-item dd {
        color: var(--ink);
    }

    * {
        box-sizing: border-box
    }

    html, body {
        height: 100%
    }

    body {
        margin: 0;
        background: var(--bg);
        color: var(--ink);
        font-family: system-ui,-apple-system,"Segoe UI",Inter,Roboto,Arial,sans-serif;
        line-height: 1.45;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    a {
        color: var(--accent);
        text-decoration: none
    }

        a:hover {
            text-decoration: underline
        }

    /* ===== Header ===== */
    .page-hd {
        width: var(--container);
        margin: 8px auto 10px;
        background: var(--panel);
        border: 1px solid var(--ring);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 14px;
        transition: background-color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        align-items: center; /* center vertically only on wide screens */
        justify-content: space-between;
        gap: 12px;
        /* prevent overlap by allowing wrapping on narrower widths */
        flex-wrap: wrap;
    }

    .hd-left {
        display: flex;
        align-items: center;
        gap: 14px;
        flex: 1 1 420px; /* take remaining space, can shrink */
        min-width: 0; /* allow text to shrink/wrap instead of overflowing */
    }

    .hd-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        flex: 0 0 auto; /* don't shrink into the title area */
    }

    .avatar-xl {
        width: 84px;
        height: 84px;
        flex: 0 0 84px;
        border-radius: 50%;
        object-fit: cover;
        background: #cfd5da;
        border: 2px solid var(--ring);
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .title-block {
        min-width: 0; /* critical for wrapping long names */
    }

    .title {
        margin: 0;
        font-weight: 800;
        letter-spacing: .2px;
        font-size: clamp(20px,3.2vw,28px);
        overflow-wrap: anywhere; /* wrap long names instead of overlapping */
        line-height: 1.2;
    }

    .subtitle {
        margin-top: 2px;
        color: var(--muted);
        font-weight: 700;
        overflow-wrap: anywhere;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 14px;
        border-radius: 10px;
        border: 1px solid var(--ring);
        background: #eef3f8;
        color: #122;
        font-weight: 800;
        transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        box-shadow: var(--shadow);
        white-space: nowrap; /* keep buttons tidy */
    }

        .btn.primary {
            background: var(--primary);
            color: #fff;
            border-color: transparent
        }

        .btn.following {
            background: #6B7280;
            color: #fff;
            border-color: transparent
        }

        .btn:hover {
            filter: brightness(.98);
            text-decoration: none
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    /* ===== Tabs ===== */
    .tabs {
        width: var(--container);
        margin: 0 auto 10px;
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .tab {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 36px;
        padding: 0 14px;
        border-radius: 999px;
        font-weight: 800;
        background: #e8eef7;
        color: #1b2b3b;
        border: 1px solid var(--ring);
        transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
    }

        .tab.active {
            background: #d9e6ff;
            color: #14315f;
            border-color: #c7d7fb;
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }

    /* ===== Main grid ===== */
    .grid {
        width: var(--container);
        margin: 0 auto 24px;
        display: grid;
        grid-template-columns: 320px 1fr;
        gap: clamp(14px,3vw,22px);
    }

    /* ===== Cards ===== */
    .card {
        background: var(--panel);
        border: 1px solid var(--ring);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 14px;
        transition: background-color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease, color 0.3s ease;
    }

    .card-hd {
        margin: 0 0 8px;
        font-weight: 900;
        font-size: 1.05rem;
        letter-spacing: .2px;
        transition: color 0.3s ease;
    }

    /* Left column details list */
    .props {
        display: grid;
        gap: 10px;
    }

        .props > div {
            display: grid;
            grid-template-columns: 150px minmax(0, 1fr); /* allow right cell to shrink/wrap */
            gap: 12px;
            align-items: start;
            padding: 8px;
            border-radius: 10px;
        }

        .props dt {
            font-weight: 800;
            color: #203040;
            transition: color 0.3s ease;
        }

        .props dd {
            margin: 0;
            color: #1d2329;
            font-weight: 700;
            overflow-wrap: anywhere;
            transition: color 0.3s ease;
        }

    .tags {
        display: flex;
        gap: 8px;
        flex-wrap: wrap
    }

    .tag {
        display: inline-flex;
        align-items: center;
        height: 30px;
        padding: 0 12px;
        border-radius: 999px;
        background: var(--chip);
        border: 1px solid var(--ring);
        font-weight: 800;
        color: #203040;
    }

    .list {
        margin: 0;
        padding-left: 1rem
    }

        .list li + li {
            margin-top: 6px
        }

    /* Contact list */
    .contact-list {
        margin: 0;
        display: grid;
        gap: 8px;
    }

    .contact-item {
        display: grid;
        grid-template-columns: 80px 1fr;
        gap: 8px;
        align-items: start;
    }

        .contact-item dt {
            font-weight: 800;
            color: #203040;
            transition: color 0.3s ease;
        }

        .contact-item dd {
            margin: 0;
            color: #1d2329;
            font-weight: 600;
            overflow-wrap: anywhere;
            transition: color 0.3s ease;
        }

    /* Stats grid for followers/following */
    .stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
